<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pesan.happyplace">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyPlace">
        <activity
            android:name=".activity.MapActivity"
            android:label="DETAIL HAPPY MAPS"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarStyle" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.HappyDetailActivity"
            android:label="DETAIL HAPPY PLACE"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarStyle" />
        <activity
            android:name=".activities.AddHappyPalceActivity"
            android:label="ADD HAPPY PLACE"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoActionBarStyle" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>